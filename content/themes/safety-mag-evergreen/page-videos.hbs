{{!< default}} <section class="py-3 bg-green-600 text-white">
    <div class="container text-sm">
        <a href="/" class="hover:underline">Home</a>
        <span class="mx-3">/</span>
        <span>Videos</span>
    </div>
    </section>
    <section class="py-8">
        <div class="container">
            <h2 class="text-4xl font-serif">Videos</h2>
        </div>
    </section>
    <div class="container w-full flex flex-wrap justify-between mb-8">
        <div class="w-full md:w-[70%]">
            <div class="w-full grid grid-cols-1 md:grid-cols-3 gap-4">
                {{#get "posts" include="tags,authors" filter="tags:hash-video"}}
                {{#foreach posts}}

                <a href="{{url}}" class="{{#if @first}}md:col-span-3{{/if}} relative block w-full rounded">
                    {{#if feature_image}}
                    <img class="w-full {{#if @first}}h-[400px]{{else}}h-[160px]{{/if}} object-cover block rounded"
                        srcset="{{img_url feature_image size=" s"}} 300w, {{img_url feature_image size="m" }} 600w,
                        {{img_url feature_image size="l" }} 1000w, {{img_url feature_image size="xl" }} 2000w"
                        sizes="(max-width: 1000px) 400px, 700px" src="{{img_url feature_image size=" m"}}"
                        alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
                    {{/if}}
                    <div
                        class="absolute rounded top-0 left-0 right-0 bottom-0 bg-black/40 hover:bg-black/20 text-white p-4 flex flex-wrap items-end">
                        <div>
                            <div class="py-2 px-4 bg-green-600 mb-1 rounded inline-block">
                                {{> "icons/play"}}
                            </div>
                            <h3 class="{{#if @first}}text-3xl{{else}}text-base{{/if}} block font-bold w-full">{{title}}
                            </h3>
                            {{#if @first}}
                            <div class="flex items-center text-sm mt-2">
                                {{#if primary_author.profile_image}}
                                <img class="rounded-full h-8 w-8 object-cover block mr-3" src={{img_url
                                    primary_author.profile_image size="xs" }} alt="{{primary_author.name}}" />
                                {{else}}
                                <img class="p-2 rounded bg-gray-100 h-8 block mr-3" src={{asset "img/user.svg" }}
                                    alt="user" />
                                {{/if}}
                                <span class="text-base">{{primary_author.name}}</span>
                            </div>
                            {{/if}}
                        </div>
                    </div>
                </a>


                {{/foreach}}
                {{/get}}

            </div>
        </div>
        <div class="w-full md:w-[25%]">
            {{> "home/subscribe"}}
            {{> "home/social-links"}}
        </div>

    </div>